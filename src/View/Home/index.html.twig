</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 my-5">
            <form method="POST">
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" id="search" name="search" placeholder="Recherche...">
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="text-right">
                    <a href="/">Pokemons</a>
                </div>
            </form>
        </div>

    {% for pokemon in pokemons %}
        <div class="col-lg-3 col-md-6 col-sm-12 my-3">
            <div class="card">
                <img src="{{pokemon.img}}" class="card-img-top" alt="">
                <div class="card-body text-center">
                    <h5 class="card-title">{{pokemon.name}}</h5>
                    <p>{{pokemon.content}}</p>
                    <p>{{pokemon.price}} â‚¬</p>
                </div>
                <div class="card-footer ">
                    <ul class="nav">
                        <li class="nav-item mx-auto">
                            <form method="POST">
                                <input type="text" class="d-none" name="add_pokemon" value="{{pokemon.id}}">
                                <button type="submit" class="btn btn-primary"><i
                                        class="fas fa-cart-arrow-down"></i></button>
                            </form>
                        </li>
                        <li class="nav-item mx-auto">
                            <a href="/home/showPokemon/{{ pokemon.id }}" class="btn btn-warning"><i
                                class="fas fa-eye"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}